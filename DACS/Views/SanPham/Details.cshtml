@model DACS.Models.Giay
@using DACS.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="colorlib-loader"></div>
<div id="page">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread"><span><a href="index.html">Trang Chủ</a></span> / <span>Chi Tiết Sản Phẩm</span></p>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSP = @Model.MaSP, @strURL = Request.Url.ToString() }, FormMethod.Post))
    {
        <div class="colorlib-product">
            <div class="container">
                <div class="row row-pb-lg product-detail-wrap">
                    <div class="col-sm-8">
                        <div class="item">
                            <div class="product-entry border">
                                <a href="#" class="prod-img">
                                    <img src="~/images/@Model.HinhAnh" class="img-fluid" alt="#">
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="product-desc">
                            <h3>@Model.TenSP</h3>
                            <p class="price">
                                <span>@string.Format("{0:0,0}", Model.GiaBan) VNĐ</span>
                            </p>
                            <p>@Model.Mota</p>
                            @Html.Action("ListSize", "SanPham")
                            <div class="input-group mb-4">
                                <span class="input-group-btn">
                                    <button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
                                        <i class="icon-minus2"></i>
                                    </button>
                                </span>
                                <input type="text" id="quantity" name="txtSoluong" class="form-control input-number" value="1" min="1" max="100">
                                <span class="input-group-btn ml-1">
                                    <button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
                                        <i class="icon-plus2"></i>
                                    </button>
                                </span>
                                <script src="~/Scripts/main.js"></script>
                                <script>
                                    $(document).ready(function () {
                                        var quantitiy = 0;
                                        $('.quantity-right-plus').click(function (e) {
                                            // Stop acting like a button
                                            e.preventDefault();
                                            // Get the field name
                                            var quantity = parseInt($('#quantity').val());
                                            // If is not undefined
                                            $('#quantity').val(quantity + 1);
                                            // Increment
                                        });
                                        $('.quantity-left-minus').click(function (e) {
                                            // Stop acting like a button
                                            e.preventDefault();
                                            // Get the field name
                                            var quantity = parseInt($('#quantity').val());
                                            // If is not undefined
                                            // Increment
                                            if (quantity > 0) {
                                                $('#quantity').val(quantity - 1);
                                            }
                                        });
                                    });
                                </script>
                            </div>
                            @*<div class="row">
                                    <div class="col-sm-12 text-center">
                                        <p class="addtocart">
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSP = @Model.MaSP,@strURL=Request.Url.ToString() })" class="btn btn-primary btn-addtocart"><i class="icon-shopping-cart"></i> Thêm Vào Giỏ</a>

                                        </p>
                                    </div>
                                </div>*@
                            <button type="submit" class="btn" style="padding:10px 15px">
                                <i class="icon-shopping-cart" style="font-size:20px"> <span style="font-size:20px">Thêm Vào Giỏ</span></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>




